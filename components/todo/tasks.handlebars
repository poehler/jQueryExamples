    <div class="todo-container row-fluid" align="center">
        <header class="header" align="center">
            <h2>To Do List</h2>
        </header>
        <div class="row-fluid">
            <div class="span10 offset1">
                <ul class="todo-list">
                    <li class="header-row">
                    	{{> header}}
                    </li>
                    
                    <li class="new-row">
	                    <form name="new-form" class="new-form" action="#">
						    <div class="column-1"><input name="newTaskName" type="text" placeholder="What needs to be done?" value="" class="task-name-input-field"></div>
						    <div class="column-2"><select name="newTaskStatusCode" class="status-code-options">{{> status_code_options}}</select></div>
						    <div class="column-3"><input name="newTargetCompletionDate" type="text" placeholder="mm/dd/yyyy" value="" class="task-date-field"></div>
						    <div class="column-4">&nbsp;</div>
						    <div class="column-5">
		                		{{> new_task_button}}
						    </div>
						</form>
                    </li>
                </ul>
                {{> tasks_listing}}
            </div>
        </div>
    
        <footer style="clear:both;padding:20px 0;" align="center">
        About
        </footer>
    </div>